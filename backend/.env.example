# Database Configuration
DATABASE_URL=sqlite:///./zephyjr.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/zephyjr

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin User (create this user on first run)
ADMIN_EMAIL=admin@zephyjr.com
ADMIN_PASSWORD=your-admin-password

# YouTube API Configuration
YOUTUBE_API_KEYS=["your-youtube-api-key-1", "your-youtube-api-key-2"]

# AI Service Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
GEMINI_API_KEY=your-gemini-api-key

# Weather API Configuration
OPENWEATHER_API_KEY=your-openweather-api-key

# Bot Configuration
BOT_MESSAGE_COOLDOWN=1
WELCOME_COOLDOWN=180
SPAM_PROTECTION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/zephy-jr.log

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "https://zephyjr.com"]

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30