{
  "name": "zephy-jr-control-panel",
  "version": "1.0.0",
  "description": "Full-stack Nightbot-style control system for Zephy Jr. YouTube bot",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && uvicorn main:app --host 0.0.0.0 --port 8000",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "bot",
    "youtube",
    "chat",
    "control",
    "dashboard",
    "fastapi",
    "nextjs",
    "cyberpunk"
  ],
  "author": "Zephy Jr. Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}